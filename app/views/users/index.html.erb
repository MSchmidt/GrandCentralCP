<h1>Listing customers</h1>

<table>
  <tr>
    <th>E-Mail</th>
    <th></th>
  </tr>

<% @users.each do |user| %>
  <tr>
    <td>
      <%= link_to h(user.email), user_path(user.id) %>
      <%= '- logged in' if current_user == user %>
      <%= '(admin)' if user.admin %>
    </td>
    <td><%= link_to 'Destroy', user, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

