%h1 Listing customers

%table
  %tr
    %th Name
    %th E-Mail
    %th

  - @users.each do |user|
    %tr
      %td
        = link_to h(user.username), user_path(user.id)
        = '- logged in' if current_user == user
        = '(admin)' if user.admin
      %td
        = link_to h(user.email), "mailto:#{user.email}"
      %td
        = link_to 'Edit', edit_user_path(user)
        = link_to 'Destroy', user, :confirm => 'Are you sure?', :method => :delete

%br/

= link_to 'New Customer', new_user_path
